#:kivy 1.0
#:import kivy kivy

<DMatcher>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size

    GridLayout:
        cols: 1
        BoxLayout:
            size_hint: 1, 2
            padding: 0.25 * self.size[0], 0
            orientation: 'vertical'
            Label:
                text: 'D-Matcher'
                text_size: self.width, 200
                font: 'Calibri Light'
                font_size: 20
                # size_hint: 1, .
                halign: 'center'
                valign: 'middle'
            DropFile:
                # size_hint: .5, 1
                id: drop_area
                text: 'Drop or select the input file'
                height: '14dp'
                background_normal: ''
                background_color: 1, .3, .4, .85
                on_release: root.show_load()

            BoxLayout:
                size_hint: 1, 0.3

            BoxLayout:
                size_hint: 1, 0.3
                Label:
                    id: input_file_label
                    text: 'No File Selected'
                    text_size: self.width, 200
                    # font: 'Calibri Light'
                    font_size: 14
                    halign: 'center'
                    valign: 'middle'
                Button:
                    id: button_execute
                    text: 'Calculate Teams'
                    on_release: root.execute_algorithm()

            Label:
                id: label_status
                text: ''
                text_size: self.width, 200
                # font: 'Calibri Light'
                font_size: 18
                background_normal: ''
                background_color: .4, .3, 1, .85
                halign: 'center'
                valign: 'middle'

        FileChooser:
            id: fc

        ProgressBar:
            id: progress_bar
            height: '5dp'
            max: 100
            value: 50


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
