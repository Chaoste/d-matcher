#:kivy 1.0
#:import kivy kivy
#:import pathlib pathlib

<FileChooserListView>:
    layout: layout
    FileChooserListLayout:
        id: layout
        controller: root

[FileListEntry@FloatLayout+TreeViewNode]:
    locked: False
    entries: []
    path: ctx.path
    # FIXME: is_selected is actually a read_only treeview property. In this
    # case, however, we're doing this because treeview only has single-selection
    # hardcoded in it. The fix to this would be to update treeview to allow
    # multiple selection.
    is_selected: self.path in ctx.controller().selection

    orientation: 'horizontal'
    size_hint_y: None
    height: '48dp' if dp(1) > 1 else '24dp'
    # Don't allow expansion of the ../ node
    is_leaf: not ctx.isdir or ctx.name.endswith('..' + ctx.sep) or self.locked
    on_touch_down: self.collide_point(*args[1].pos) and ctx.controller().entry_touched(self, args[1])
    on_touch_up: self.collide_point(*args[1].pos) and ctx.controller().entry_released(self, args[1])
    BoxLayout:
        pos: root.pos
        size_hint_x: None
        width: root.width - dp(10)
        Label:
            id: filename
            text_size: self.width, None
            halign: 'left'
            shorten: True
            text: '    {}'.format(ctx.name)
        Label:
            text_size: self.width, None
            size_hint_x: None
            halign: 'right'
            text: '{}'.format(ctx.get_nice_size())

<DMatcher>:
    # canvas.before:
    #     Color:
    #         rgba: .09, .1, .11, 1
    #     Rectangle:
    #         pos: self.pos
    #         size: self.size
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'res/background.jpg'
            size: self.size

    GridLayout:
        cols: 1
        BoxLayout:
            size_hint: 1, 10
            padding: 0.25 * self.size[0], 0
            orientation: 'vertical'

            Label:
                text: 'D-Matcher'
                text_size: self.width, 200
                font: 'Calibri Light'
                font_size: '20dp'
                halign: 'center'
                valign: 'middle'

            BoxLayout:
                size_hint: 1, 0.3

            DropFile:
                id: drop_area
                text: 'Drop or select the input file (.csv)'
                font_size: '16dp'
                background_normal: ''
                background_color: .4, .3, .7, 1
                on_release: root.show_load()

            BoxLayout:
                size_hint: 1, 1
                Label:
                    id: input_file_label
                    text: 'No File Selected'
                    text_size: self.width, 200
                    font: 'Calibri Light'
                    font_size: '12dp'
                    halign: 'center'
                    valign: 'middle'

            BoxLayout:
                size_hint: 1, 0.8
                orientation: 'horizontal'
                BoxLayout:
                    size_hint: 0.2, 1
                Button:
                    size_hint: 0.6, 1
                    id: button_execute
                    text: 'Calculate Teams'
                    disabled: True
                    background_normal: ''
                    background_color: .4, .3, .7, 1
                BoxLayout:
                    size_hint: 0.2, 1

            StatusLabel:
                id: label_status
                text: ''
                text_size: self.width, 200
                font: 'Calibri Light'
                font_size: '12dp'
                color: 0.3, 0.7, 0.3, 1
                halign: 'center'
                valign: 'middle'

            StatusLabel:
                id: label_result
                text: ''
                font: 'Calibri Light'
                font_size: '12dp'
                color: 1, 1, 1, 1
                halign: 'center'
                valign: 'middle'

        ProgressBar:
            id: progress_bar
            max: 100
            value: 0

    FileChooser:
        id: fc

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: str(pathlib.Path.home())

        BoxLayout:
            size_hint_y: 0.1
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
